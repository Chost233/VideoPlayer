<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/text">

        <SurfaceView
            android:id="@+id/activity_video_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/activity_video_first_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_start"/>

        <ImageView
            android:id="@+id/activity_video_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/ic_video_download"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/activity_video_state"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_video_start_pause"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_video_start"/>

        <ImageView
            android:id="@+id/activity_video_next_video"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_next_video"/>

        <ImageView
            android:id="@+id/activity_video_last_video"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_last_video"/>

        <SeekBar
            android:id="@+id/activity_video_seekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
</LinearLayout>